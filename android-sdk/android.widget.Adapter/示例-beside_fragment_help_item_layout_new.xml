<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_help_item_border_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beside_help_item_default_card_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_help_item_header_border_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_help_item_iv_border_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview_item_help_portrait_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/beside_item_besideperson_persongroup_drawable"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textview_item_help_nickname_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="昵称"
                    android:textColor="@color/beside_help_item_reply_color"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/imageview_item_help_sex_id"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignTop="@+id/textview_item_help_nickname_id"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/textview_item_help_nickname_id"
                    android:scaleType="fitXY"
                    android:src="@drawable/beside_item_besideperson_sex_woman" />

                <ImageView
                    android:id="@+id/tv_item_help_isown_id"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textview_item_help_nickname_id"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/imageview_item_help_sex_id"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tv_item_help_isown"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_item_help_floor_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_item_help_isown_id"
                    android:layout_marginRight="12dp"
                    android:gravity="center_horizontal"
                    android:text="1F"
                    android:textColor="#d0d0d0"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/textview_item_help_age_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textview_item_help_nickname_id"
                    android:layout_below="@+id/textview_item_help_nickname_id"
                    android:background="@drawable/beside_help_text_background"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:text="60后"
                    android:textColor="@color/beside_help_item_age_color"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/textview_help_itemtag_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_item_help_nickname_id"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/textview_item_help_age_id"
                    android:background="@drawable/beside_help_text_background"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="狮子座"
                    android:textColor="@color/beside_help_item_age_color"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/textview_help_itemtag_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_item_help_nickname_id"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/textview_help_itemtag_one"
                    android:background="@drawable/beside_help_text_background"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="狮子座"
                    android:textColor="@color/beside_help_item_age_color"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/textview_help_itemtag_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_item_help_nickname_id"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/textview_help_itemtag_two"
                    android:background="@drawable/beside_help_text_background"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="狮子座"
                    android:textColor="@color/beside_help_item_age_color"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/textview_help_item_where_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_item_help_nickname_id"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/textview_help_itemtag_three"
                    android:background="@drawable/beside_help_text_area_background"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="北京"
                    android:textColor="@color/beside_help_item_age_color"
                    android:textSize="11dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_item_help_info_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="5dp" >

            <LinearLayout
                android:id="@+id/reply_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout 
                    android:id="@+id/reply_floor_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:background="@color/beside_find_navigation_item_divide"
                    android:padding="10dp" >
                    <RelativeLayout
                        android:id="@+id/reply_floor_head_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp" >
                        <TextView 
                            android:id="@+id/reply_floor_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" 
                            android:layout_alignParentLeft="true"
                            android:textColor="#333333"
                            android:textSize="13dp" />
                        <TextView 
                            android:id="@+id/reply_floor_publish_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" 
                            android:layout_alignParentRight="true"
                            android:textColor="#333333"
                            android:textSize="13dp" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/reply_floor_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="#333333"
                        android:textSize="15dp"
                        android:text="test reply floor content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/textview_item_help_question_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:text="求助，本人dell笔记本一台，需要重装Win7系统，有意者请联系"
                    android:textColor="#333333"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:id="@+id/layout_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/reply_layout"
                android:layout_marginTop="10dp"
                android:background="@color/beside_find_navigation_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_divider" >

                <TextView
                    android:id="@+id/textview_item_help_publish_time_id"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="发布日期"
                    android:textColor="@color/beside_help_item_reply_color"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/comment_item_help_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/textview_item_help_reply_count_id" />

                <TextView
                    android:id="@+id/textview_item_help_reply_cai_id"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/comment_item_help_id"
                    android:drawableLeft="@drawable/textview_item_help_reply_cai"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="9999+"
                    android:textColor="@color/beside_help_item_reply_color"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/textview_item_help_reply_ding_id"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/textview_item_help_reply_cai_id"
                    android:drawableLeft="@drawable/textview_item_help_reply_ding"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="9999+"
                    android:textColor="@color/beside_help_item_reply_color"
                    android:textSize="13dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/layout_dividera"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/beside_find_navigation_item_divide" />
    </LinearLayout>

</LinearLayout>