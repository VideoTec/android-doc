--------------------------------------------------
å·¥ç¨‹æ–‡ä»¶ /home/wangxiang/AndroidStudioProjects/my-project/java/com/example/activity/BUCK
æºæ–‡ä»¶ //java/com/example/activity:activity è·¯å¾„çš„ buck æ–‡ä»¶
--------------------------------------------------

android_library(
  name = 'activity',
  srcs = glob(['*.java']),
  deps = [
    '//res/com/example/activity:res',
  ],
  visibility = [ 'PUBLIC' ],
)

project_config(
  src_target = ':activity',
)

--------------------------------------------------
å·¥ç¨‹æ–‡ä»¶ /home/wangxiang/AndroidStudioProjects/my-project/res/com/example/activity/BUCK
æºæ–‡ä»¶ //res/com/example/activity è·¯å¾„çš„ buck æ–‡ä»¶
--------------------------------------------------
android_resource(
  name = 'res',
  res = 'res',
  package = 'com.example',
  visibility = [
    '//java/com/example/activity:',
  ],
)

project_config(
  src_target = ':res',
  src_roots = None,
)

